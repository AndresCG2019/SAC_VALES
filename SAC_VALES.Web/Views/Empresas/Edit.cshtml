@model SAC_VALES.Web.Data.Entities.EmpresaEntity

@{
    ViewData["Title"] = "Edit";
}

<h2>Modificar Empresa</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="NombreEmpresa" class="control-label"></label>
                <input asp-for="NombreEmpresa" class="form-control" />
                <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreRepresentante" class="control-label"></label>
                <input asp-for="NombreRepresentante" class="form-control" />
                <span asp-validation-for="NombreRepresentante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidosRepresentante" class="control-label"></label>
                <input asp-for="ApellidosRepresentante" class="form-control" />
                <span asp-validation-for="ApellidosRepresentante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonoRepresentante" class="control-label"></label>
                <input asp-for="TelefonoRepresentante" class="form-control" />
                <span asp-validation-for="TelefonoRepresentante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
