@model SAC_VALES.Web.Data.Entities.ValeEntity

@{
    ViewData["Title"] = "Edit";
}

<h2>Modificar Vale</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="FechaCreacion" />
            <input type="hidden" asp-for="FechaCreacionLocal" />
            <input type="hidden" asp-for="status_vale" />

            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumeroFolio" class="control-label"></label>
                <input asp-for="NumeroFolio" class="form-control" />
                <span asp-validation-for="NumeroFolio" class="text-danger"></span>
            </div>

            <hr />
            <div>
                <label>Nombre del Cliente:</label> @ViewBag.ClienteNombre <hr />
                <label>Apellidos del Cliente:</label> @ViewBag.ClienteApellidos<hr />
                <label>Correo del Cliente:</label> @ViewBag.ClienteEmail<hr />
            </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
