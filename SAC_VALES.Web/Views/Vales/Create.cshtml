@model SAC_VALES.Web.Data.Entities.ValeEntity

@{
    ViewData["Title"] = "Crear Vale";
}

<h2>Registrar Vale</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <div>@Html.ValidationSummary()</div>

        <label>Empresa: </label>@ViewBag.EmpresaDisplay
        <br />
        <label>Primer folio de la Talonera: </label>@ViewBag.Talonera.RangoInicio
        <br />
        <label>Ultimo folio de la Talonera: </label>@ViewBag.Talonera.RangoFin
        <br />
        <label>Nombre del cliente: </label>@ViewBag.Cliente.Nombre
        <br />
        <label>Apellidos del cliente: </label>@ViewBag.Cliente.Apellidos
        <br />
        <label>Correo del cliente: </label>@ViewBag.Cliente.Email
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumeroFolio" class="control-label"></label>
                <input asp-for="NumeroFolio" class="form-control" value="@ViewBag.FolioSugerido" />
                <span asp-validation-for="NumeroFolio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CantidadPagos" class="control-label"></label>
                <input asp-for="CantidadPagos" class="form-control" />
                <span asp-validation-for="CantidadPagos" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Fecha de inicio de primer pago</label>
                <br />
                <input asp-for="FechaPrimerPago" asp-format="{0:yyyy/MM/dd}" class="form-control" />

                <span asp-validation-for="FechaPrimerPago" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" asp-route-idCliente="@ViewBag.idCliente" asp-route-idTalonera="@ViewBag.idTalonera"
                       value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
