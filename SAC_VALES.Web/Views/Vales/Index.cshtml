@model IEnumerable<SAC_VALES.Web.Data.Entities.ValeEntity>

@{
    ViewData["Title"] = "Index";
}

<h2>Vales</h2>

<div class="row">
    <p class="col-lg-1 col-md-1 ">
        <a asp-action="Create">Registrar Vale</a>
    </p>
    <p class="col-lg-1 col-md-1">
        <a asp-controller="Taloneras" asp-action="Index">Taloneras</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaLocal)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaLocal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Modificar</a>
            </td>
            <td>
                <a asp-action="Eliminar" asp-route-id="@item.id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
