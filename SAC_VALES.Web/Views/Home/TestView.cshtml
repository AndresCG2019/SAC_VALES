@model IEnumerable<SAC_VALES.Web.Data.Entities.PagoEntity>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <h1>HOLA JIJI SOY TEST VIEW</h1>
</div>

<div id="chart_div"></div>
@ViewBag.texto1
@ViewBag.texto2
<br />
Vales Pagados: @ViewBag.valesActivos
<br />
Vales No Pagados: @ViewBag.valesFalsos

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script type="text/javascript">

            google.charts.load('current', { 'packages': ['corechart'] });

            google.charts.setOnLoadCallback(drawChart);

            function drawChart() {

                var data = new google.visualization.DataTable();
                data.addColumn('string', 'TipoVale');
                data.addColumn('number', 'Cantidad');
                data.addRows([
                    ['Pagados', @ViewBag.valesActivos],
                    ['No pagados', @ViewBag.valesFalsos]
                ]);

                var options = {
                    'title': 'VALES',
                    'width': 400,
                    'height': 300
                };

                var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
                chart.draw(data, options);
            }

    </script>

}
