@model SAC_VALES.Web.Models.EditUserViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Modificar Información de Usuario</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeUser" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="userType" />

            <partial name="_User" />

            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-primary" />
                <a asp-action="ChangePassword" class="btn btn-warning">Cambiar Contraseña</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.PicturePath))
        {
            <img src="@Url.Content(Model.PicturePath)" alt="Image" style="width:300px;height:300px;max-width: 100%; height: auto;" />
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
